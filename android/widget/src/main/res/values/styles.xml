<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.ColorMaster.FilterChip" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:minHeight">32dp</item>
        <item name="horizontalPadding">10dp</item>
        <item name="verticalPadding">6dp</item>
        <item name="clearIcon">@drawable/ic_cancel_black_12dp</item>
        <item name="foreground">?selectableItemBackground</item>
        <item name="showIcons">true</item>
        <item name="dotSize">10dp</item>
        <item name="dotPadding">7dp</item>
        <item name="android:textColor">?colorOnSecondary</item>
        <item name="android:color">?colorSecondary</item>
        <item name="clearIconTint">@color/filter_chip_clear_icon_selector</item>
        <item name="selectedTextColor">?colorOnSecondary</item>
        <item name="backgroundColor">@color/orange_400</item>
    </style>

    <style name="Widget.ColorMaster.Item.Footer" parent="">
        <item name="android:layout_height">@dimen/item_footer_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/item_footer_marginHorizontal</item>
        <item name="android:layout_marginEnd">@dimen/item_footer_marginHorizontal</item>
    </style>
    <style name="Widget.ColorMaster.Item.FooterText" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">@dimen/item_footer_padding</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="Widget.ColorMaster.Item.FooterProgress" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Widget.ColorMaster.Item.IdolColor" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">@dimen/item_idol_color_marginVertical</item>
        <item name="android:layout_marginBottom">@dimen/item_idol_color_marginVertical</item>
        <item name="android:layout_marginStart">@dimen/item_idol_color_marginHorizontal</item>
        <item name="android:layout_marginEnd">@dimen/item_idol_color_marginHorizontal</item>
        <item name="android:padding">@dimen/item_idol_color_padding</item>
    </style>

    <style name="Widget.ColorMaster.Item.IdolColorText" parent="">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/item_idol_color_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
