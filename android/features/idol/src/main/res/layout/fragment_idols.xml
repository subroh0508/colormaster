<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/fragment_idols_coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/fragment_idols_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ScrollView>

        <FrameLayout
            android:id="@+id/fragment_bottom_sheet_idols"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            app:behavior_hideable="false"
            app:behavior_skipCollapsed="true"
            app:behavior_peekHeight="@dimen/bottom_sheet_default_peek_height"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            tools:layout="@layout/fragment_bottom_sheet_idols"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
