CREATE TABLE Idol (
    id TEXT PRIMARY KEY,
    name TEXT NOT NULL,
    nameKana TEXT NOT NULL,
    color TEXT NOT NULL,
    brand TEXT
);

insertIdol:
INSERT INTO Idol(id, name, nameKana, color, brand)
VALUES (?, ?, ?, ?, ?);

selectAll:
SELECT *
FROM Idol;

selectById:
SELECT *
FROM Idol
WHERE id = ?;

selectByBrand:
SELECT *
FROM Idol
WHERE brand = ?;

deleteById:
DELETE FROM Idol
WHERE id = ?;
